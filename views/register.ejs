<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/static/stylesheets/main.css">
    <link rel="stylesheet" href="/static/stylesheets/mobile.css">
    <title>User Registration</title>
</head>
<body>
    <script>
        var toggle = 0;
        function toggleMenu() {
            
            if (toggle == 0) {
                document.querySelector('.menuOpenClose').innerHTML = 'CLOSE';
                document.querySelector('.navMobile').style.display = 'flex';
                document.querySelector('body').style.position = 'fixed';
                toggle = 1;
            } else if (toggle == 1) {
                document.querySelector('.menuOpenClose').innerHTML = 'MENU';
                document.querySelector('.navMobile').style.display = 'none';
                document.querySelector('body').style.position = '';
                toggle = 0;
            } else {
                //do nothing
            }
            
        };
    </script>
    <button onclick="toggleMenu()" class="menuOpenClose">MENU</button>
    <nav class="navMobile">
        <a href="/">HOME</a>
        <a href="/login">LOGIN</a>
    </nav>
    <nav>
        <a href="/">HOME</a>
        <a href="/login">LOGIN</a>
    </nav>
    <div class="main-container">
        <h1>REGISTRATION</h1>
        <form action="/register" method="POST">
            <input type="text" name="username" placeholder="USERNAME">
            <input type="password" name="password" placeholder="PASSWORD">
            <button type="submit">login</button>
        </form>
    </div>
</body>
</html>